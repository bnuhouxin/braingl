#version 120

attribute vec4 a_position;
attribute vec4 a_color;

uniform mat4 mvp_matrix;

////////////////////////////////////////////////////////////////////////////////////////////
// 2: uniforms
/////////////////////////////////////////////////////////////////////////////////////////////


/////////////////////////////////////////////////////////////////////////////////////////////
// vertex shader -- main
//
/////////////////////////////////////////////////////////////////////////////////////////////
void main()
{
    gl_FrontColor = vec4( a_color.rgb, 0.4 );
    
    gl_Position = mvp_matrix * a_position;
}
